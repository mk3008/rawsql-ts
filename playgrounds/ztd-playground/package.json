{
  "name": "@rawsql-ts/ztd-playground",
  "version": "0.0.1",
  "description": "Internal ZTD playground for fast iteration",
  "private": true,
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@rawsql-ts/adapter-node-pg": "workspace:*",
    "@rawsql-ts/testkit-postgres": "workspace:*",
    "@rawsql-ts/testkit-core": "workspace:*",
    "@rawsql-ts/ztd-cli": "workspace:*",
    "pg": "^8.11.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/pg": "^8.15.6",
    "@testcontainers/postgresql": "^10.28.0",
    "eslint": "^9.22.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-sql": "^0.19.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.8.2",
    "vitest": "^4.0.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,sql}": [
      "pnpm format"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
