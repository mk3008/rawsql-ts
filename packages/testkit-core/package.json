    "fixtures",
    "rawsql"
  ],
  "license": "MIT",
  "author": "msugiura",
  "repository": {
    "type": "git",
    "url": "https://github.com/mk3008/rawsql-ts.git",
    "directory": "packages/testkit-core"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "rawsql-ts": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "vitest": "^4.0.7"
  },
  "files": [
    "dist"
  ]
}
