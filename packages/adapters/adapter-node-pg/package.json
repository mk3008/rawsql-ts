{
  "name": "@rawsql-ts/adapter-node-pg",
  "version": "0.15.2",
  "description": "Node pg adapter that connects PostgreSQL fixtures to @rawsql-ts/testkit-postgres.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "node -e \"const fs=require('fs');const cp=require('child_process');const npm=process.platform==='win32'?'npm.cmd':'npm';if(!fs.existsSync('dist/index.js')){process.exit(cp.spawnSync(npm,['run','build'],{stdio:'inherit'}).status??1)}\"",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests --ext .ts",
    "release": "npm run lint && npm run test && npm run build && npm pack --dry-run && pnpm publish --access public"
  },
  "keywords": [
    "postgres",
    "adapter",
    "fixtures",
    "rawsql"
  ],
  "license": "MIT",
  "author": "msugiura",
  "repository": {
    "type": "git",
    "url": "https://github.com/mk3008/rawsql-ts.git",
    "directory": "packages/adapters/adapter-node-pg"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@rawsql-ts/testkit-postgres": "workspace:^",
    "@rawsql-ts/testkit-core": "workspace:^",
    "pg": "^8.13.1",
    "rawsql-ts": "workspace:^"
  },
  "devDependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/client-runtime-utils": "^7.2.0",
    "@types/pg": "^8.15.6",
    "@testcontainers/postgresql": "^11.11.0",
    "drizzle-orm": "^0.31.2",
    "prisma": "^7.2.0",
    "testcontainers": "^11.11.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.7"
  },
  "files": [
    "dist"
  ]
}
