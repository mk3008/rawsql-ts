{
  "extends": "../../tsconfig.json",
  "references": [
    { "path": "../core" },
    { "path": "../testkit-core" }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "src/**/*.js", "src/**/*.d.ts"]
}
